SECRET_KEY=your_very_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
# Use .secrets/ directory for sensitive files
SQLITE_NAME=.secrets/db.sqlite3
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO

# ======================================
# TMDB API Configuration (Phase 6)
# ======================================
# Get your free API key from: https://www.themoviedb.org/settings/api
# Required for movie import features
TMDB_API_KEY=your_tmdb_api_key_here

# ======================================
# Database Settings (Production)
# ======================================
# Uncomment for PostgreSQL (used in Docker)
# DB_NAME=flix_review_db
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DB_HOST=db
# DB_PORT=5432

# ======================================
# Redis Cache (Production)
# ======================================
# Uncomment for Redis caching (used in Docker)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0

# ======================================
# Rate Limiting
# ======================================
RATELIMIT_ENABLE=True
